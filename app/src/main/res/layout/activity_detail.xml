<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_kedokteran_3"
    tools:context="com.nisa.bismillah_dokter.tab_layout.DETAIL">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:srcCompat="@drawable/backg_dokter"
            android:id="@+id/imgDetail"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true" />



        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageC"
            android:layout_centerHorizontal="true"
            android:src="@drawable/zahra2"
            app:civ_border_color="#000"
            android:layout_marginTop="130dp"
            android:layout_gravity="center"
            app:civ_border_width="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/all"
            android:layout_below="@id/imageC"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama : "
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/aku"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alamt : "
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/jl"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="umur : "
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/th"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kemampuan : "
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/puan"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="zahra"
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/name"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" kota solok , Jl.payakumbuh"
                    android:layout_centerHorizontal="true"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/alm"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="35 tahun"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:id="@+id/umr"
                    android:textColor="#000"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Sebagai Dokter Gigi"
                    android:layout_marginTop="30dp"
                    android:textColor="#000"
                    android:textSize="18dp"
                    android:id="@+id/km"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="left"/>

            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/tlp"
            android:layout_below="@id/all"
            android:background="#7fc6bf"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="50dp"
            android:text="Telepon"/>
    </RelativeLayout>
</ScrollView>

